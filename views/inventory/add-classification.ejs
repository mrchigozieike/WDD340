<!--This will show three distint sections:
 A Content heading, 
 a message and the Inventory Items Display. -->
<%- include('../partials/head') %>
    <h2>
        <%= title %>
    </h2>

    <form class="form-container" action="/inv/add-classification" method="post">
        <fieldset>
            <%- messages() %>
            <p>Field is required</p>
            <div class="form-group">
                <label class="management-label">Classification Name<input type="text" name="classification_name"
                        id="classificationName" required pattern="[a-zA-Z]+"
                        value="<%= locals.classification_name %>"></label>
                <span>Name must be alphabetic characters only</span>
            </div>
            <button class="form-button"  type="submit">Add New Classification</button>
        </fieldset>
    </form>
</html>